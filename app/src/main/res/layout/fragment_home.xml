<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
         <androidx.core.widget.NestedScrollView
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical">
                 <include layout="@layout/horizontal_scroll_items_layout"/>
                 <com.smarteist.autoimageslider.SliderLayout
                     android:layout_width="match_parent"
                     android:layout_height="250dp"
                     android:clickable="true"
                     android:layout_alignParentTop="true"
                     android:id="@+id/imageSlider"/>
                 <ProgressBar
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:id="@+id/progress"
                     android:visibility="gone"
                     android:indeterminateTint="@color/colorPrimary"
                     android:layout_gravity="center" />
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:orientation="vertical"
                     android:paddingTop="10dp"
                     android:background="#f0f0f0">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Shop By TRENDING"
                         android:layout_marginLeft="10dp"
                         android:textSize="16dp" />
                     <LinearLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:background="#f0f0f0"
                         xmlns:android="http://schemas.android.com/apk/res/android">
                         <androidx.recyclerview.widget.RecyclerView
                             xmlns:android="http://schemas.android.com/apk/res/android"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:id="@+id/recyclerview1"
                             />
                     </LinearLayout>
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Shop By OFFICE PRODUCTS"
                         android:layout_marginLeft="10dp"
                         android:textSize="16dp" />
                     <LinearLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:background="#f0f0f0"
                         xmlns:android="http://schemas.android.com/apk/res/android">
                         <androidx.recyclerview.widget.RecyclerView
                             xmlns:android="http://schemas.android.com/apk/res/android"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:id="@+id/recyclerview2"
                             />
                     </LinearLayout>
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Shop By CLOTHING"
                         android:layout_marginLeft="10dp"
                         android:textSize="16dp" />
                     <LinearLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:background="#f0f0f0"
                         xmlns:android="http://schemas.android.com/apk/res/android">
                         <androidx.recyclerview.widget.RecyclerView
                             xmlns:android="http://schemas.android.com/apk/res/android"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:id="@+id/recyclerview3"
                             />
                     </LinearLayout>
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Shop By GIFTS"
                         android:layout_marginLeft="10dp"
                         android:textSize="16dp" />
                     <LinearLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:background="#f0f0f0"
                         xmlns:android="http://schemas.android.com/apk/res/android">
                         <androidx.recyclerview.widget.RecyclerView
                             xmlns:android="http://schemas.android.com/apk/res/android"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:id="@+id/recyclerview4"
                             />
                     </LinearLayout>
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Shop By PHOTOS ALBUM "
                         android:layout_marginLeft="10dp"
                         android:textSize="16dp" />
                     <LinearLayout android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:background="#f0f0f0"
                         xmlns:android="http://schemas.android.com/apk/res/android">
                         <androidx.recyclerview.widget.RecyclerView
                             xmlns:android="http://schemas.android.com/apk/res/android"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:id="@+id/recyclerview5"
                             />
                     </LinearLayout>
                 </LinearLayout>
             </LinearLayout>
         </androidx.core.widget.NestedScrollView>
</RelativeLayout>

